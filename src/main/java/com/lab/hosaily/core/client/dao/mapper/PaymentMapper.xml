    <insert id="save">
        INSERT
          INTO payment (
               id,
               purchase_id,
               price,
               type,
               state,
               pay_time,
               affirm_time,
               create_time,
               msg
        ) VALUE (
               #{id,          jdbcType=VARCHAR},
               #{purchaseId,  jdbcType=VARCHAR},
               #{price,       jdbcType=DOUBLE},
               #{type,        typeHandler=payTypeHandler},
               #{state,       typeHandler=payStateHandler},
               #{payTime,     jdbcType=TIMESTAMP},
               #{affirmTime,  jdbcType=TIMESTAMP},
               #{createTime,  jdbcType=TIMESTAMP},
               #{msg,  jdbcType=VARCHAR}
        )
    </insert>

    <update id="update">
        UPDATE payment
         <set>
             <if test="price != null and price >= 0">
                 price = #{price, jdbcType=DOUBLE},
             </if>
             <if test="type != null">
                 type = #{type, typeHandler=payTypeHandler},
             </if>
             <if test="state != null">
                 state = #{state, typeHandler=payStateHandler},
             </if>
             <if test="payTime != null">
                 pay_time = #{payTime, jdbcType=TIMESTAMP},
             </if>
             <if test="affirmTime != null">
                 affirm_time = #{affirmTime, jdbcType=TIMESTAMP},
             </if>
             <if test="updateTime != null">
                 update_time = #{updateTime, jdbcType=TIMESTAMP},
             </if>
             <if test="msg != null">
                 msg = #{msg, jdbcType=VARCHAR},
             </if>
         </set>
          WHERE id = #{id}
    </update>

